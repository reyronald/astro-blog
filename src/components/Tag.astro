---
interface Props {
  tag: string
}

const { tag } = Astro.props

const TAG_COLORS: Record<string, string> = {
  'Node.js': 'bg-green-700 text-white',
  Database: 'bg-blue-600 text-white',
  ORM: 'bg-purple-600 text-white',
  Prisma: 'bg-slate-800 text-white',
  Drizzle: 'bg-emerald-600 text-white',
  Transactions: 'bg-orange-600 text-white',
  default: 'bg-indigo-800 text-slate-100',
}
const colors = tag in TAG_COLORS ? TAG_COLORS[tag] : TAG_COLORS.default
---

<span class={`mr-2 px-2 py-1 text-sm font-bold rounded-full ${colors}`}>
  {tag}
</span>
